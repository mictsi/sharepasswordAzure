{
  "Application": {
    "Name": "sharepasswordAzure",
    "EnableHttpsRedirection": false
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5099"
      }
    }
  },
  "AzureKeyVault": {
    "VaultUri": "",
    "TenantId": "",
    "ClientId": "",
    "ClientSecret": "",
    "SecretPrefix": "sharepassword"
  },
  "AzureTableAudit": {
    "ServiceSasUrl": "",
    "TableName": "auditlogs",
    "PartitionKey": "audit"
  },
  "AdminAuth": {
    "Username": "admin",
    "Password": "admin123!ChangeMe"
  },
  "OidcAuth": {
    "Enabled": false,
    "Authority": "https://login.example.com",
    "ClientId": "sharepassword-app",
    "ClientSecret": "",
    "LogTokensForTroubleshooting": false,
    "CallbackPath": "/signin-oidc",
    "SignedOutCallbackPath": "/signout-callback-oidc",
    "RequireHttpsMetadata": true,
    "Scopes": [ "openid", "profile", "email" ],
    "GroupClaimType": "groups",
    "AdminRoleName": "Admin",
    "UserRoleName": "User",
    "AdminGroups": [ "<entra-group-id-for-admins>" ],
    "UserGroups": [ "<entra-group-id-for-users>" ]
  },
  "Encryption": {
    "Passphrase": "dev-only-passphrase-change-before-production"
  },
  "Share": {
    "DefaultExpiryHours": 4,
    "CleanupIntervalSeconds": 30
  },
  "ConsoleAuditLogging": {
    "Enabled": true,
    "Level": "DEBUG"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
