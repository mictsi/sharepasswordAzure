@using Microsoft.Extensions.Options
@using SharePassword.Options
@inject IOptions<OidcAuthOptions> OidcAuthOptions
@{
    var adminRoleName = string.IsNullOrWhiteSpace(OidcAuthOptions.Value.AdminRoleName) ? "Admin" : OidcAuthOptions.Value.AdminRoleName.Trim();
    var controllerName = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "home").ToLowerInvariant();
    var actionName = (ViewContext.RouteData.Values["action"]?.ToString() ?? "index").ToLowerInvariant();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SharePassword</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="controller-@controllerName action-@actionName">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light app-navbar">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Index" aria-label="SharePassword home">
                    <img src="~/images/logo.png" alt="SharePassword logo" class="brand-logo" />
                    <span class="brand-text">SharePassword</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Index">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Create">New Share</a>
                            </li>
                            @if (User.IsInRole(adminRoleName))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Audit">Audit Logs</a>
                                </li>
                            }
                        </ul>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-flex">
                            <button type="submit" class="btn btn-outline-secondary btn-sm">Logout</button>
                        </form>
                    }
                    else
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Admin Login</a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container app-main-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; @DateTime.UtcNow.Year - SharePassword
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
