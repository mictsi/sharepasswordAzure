@model SharePassword.ViewModels.AdminAuditViewModel
@{
    ViewData["Title"] = "Audit Logs";
}

<h2>Audit Logs</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-sm-6 col-md-4">
        <input type="text" name="search" value="@Model.Search" class="form-control" placeholder="Search actor, operation, details..." />
    </div>
    <div class="col-auto">
        <input type="hidden" name="pageSize" value="@Model.PageSize" />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
    @if (!string.IsNullOrWhiteSpace(Model.Search))
    {
        <div class="col-auto">
            <a class="btn btn-outline-secondary" href="@Url.Action("Audit", new { page = 1, pageSize = Model.PageSize })">Clear</a>
        </div>
    }
</form>

<p class="text-muted">Showing @Model.Logs.Count of @Model.TotalCount events (page @Model.Page of @Model.TotalPages).</p>

<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Time (UTC)</th>
            <th>Actor</th>
            <th>Operation</th>
            <th>Success</th>
            <th>Target</th>
            <th>IP</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model.Logs)
        {
            <tr>
                <td>@log.TimestampUtc.ToString("u")</td>
                <td>@log.ActorType / @log.ActorIdentifier</td>
                <td>@log.Operation</td>
                <td>
                    @if (log.Success)
                    {
                        <span class="badge bg-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">No</span>
                    }
                </td>
                <td>@log.TargetType @log.TargetId</td>
                <td>@log.IpAddress</td>
                <td>@log.Details</td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Audit paging">
    <ul class="pagination">
        <li class="page-item @(Model.HasPreviousPage ? string.Empty : "disabled")">
            <a class="page-link" href="@Url.Action("Audit", new { search = Model.Search, page = Model.Page - 1, pageSize = Model.PageSize })">Previous</a>
        </li>
        <li class="page-item disabled">
            <span class="page-link">Page @Model.Page of @Model.TotalPages</span>
        </li>
        <li class="page-item @(Model.HasNextPage ? string.Empty : "disabled")">
            <a class="page-link" href="@Url.Action("Audit", new { search = Model.Search, page = Model.Page + 1, pageSize = Model.PageSize })">Next</a>
        </li>
    </ul>
</nav>
