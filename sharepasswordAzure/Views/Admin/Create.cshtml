@model SharePassword.ViewModels.AdminCreateShareViewModel
@{
    ViewData["Title"] = "Create Password Share";
}

<h2>Create Password Share</h2>
<p>Provide recipient email, username, secret text, and expiry time.</p>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="RecipientEmail" class="form-label"></label>
        <input asp-for="RecipientEmail" class="form-control" />
        <span asp-validation-for="RecipientEmail" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SharedUsername" class="form-label"></label>
        <input asp-for="SharedUsername" class="form-control" />
        <span asp-validation-for="SharedUsername" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <textarea asp-for="Password" class="form-control" rows="10" maxlength="1000" id="secretText"></textarea>
        <div class="form-text" id="secretTextCounter">0 / 1000 characters (1000 left)</div>
        <div class="text-danger d-none" id="secretTextWarning">Secret text is over the 1000 character limit.</div>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ExpiryHours" class="form-label"></label>
        <input asp-for="ExpiryHours" class="form-control" />
        <span asp-validation-for="ExpiryHours" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="RequireOidcLogin" class="form-check-input" />
        <label asp-for="RequireOidcLogin" class="form-check-label"></label>
        <span asp-validation-for="RequireOidcLogin" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Share</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const maxChars = 1000;
            const input = document.getElementById("secretText");
            const counter = document.getElementById("secretTextCounter");
            const warning = document.getElementById("secretTextWarning");

            if (!input || !counter || !warning) {
                return;
            }

            function updateCount() {
                const length = input.value.length;
                const remaining = Math.max(0, maxChars - length);
                counter.textContent = `${length} / ${maxChars} characters (${remaining} left)`;

                if (length > maxChars) {
                    warning.classList.remove("d-none");
                    counter.classList.add("text-danger");
                } else {
                    warning.classList.add("d-none");
                    counter.classList.remove("text-danger");
                }
            }

            input.addEventListener("input", updateCount);
            updateCount();
        })();
    </script>
}
